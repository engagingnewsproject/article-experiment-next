  "type": "commonjs",
  "scripts": {
    "dev": "NEXT_PUBLIC_USE_LIVE_FIRESTORE=true NODE_ENV=development next dev",
    "dev:emulator": "sh scripts/dev.sh",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "emulator": "firebase emulators:start",
