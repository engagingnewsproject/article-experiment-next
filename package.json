    "export-research": "node scripts/exportResearchData.js",
    "export-google-sheets": "node scripts/exportToGoogleSheets.js",
    "import-data": "node scripts/importFirestoreData.js",
    "import-data:dev": "node scripts/importFirestoreDataToDev.js",
    "fix-timestamps:dev": "node scripts/fixArticleTimestamps.js",
    "delete-logs-by-ip": "node scripts/deleteLogsByIP.js",
    "import-data:wait": "wait-on http://localhost:8080 && sleep 2 && npm run import-data",
    "prod": "next build && next start",
    "import-and-dev": "wait-on http://localhost:8080 && npm run import-data && next dev",
